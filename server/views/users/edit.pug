extends ../layouts/application.pug

block header
  = t('views.user.edit.title')

block content
  +formFor()(action=route('user', { id: user.id }) method='post')
    +input(user, 'firstName', errors)(type="text")
    +input(user, 'lastName', errors)(type="text")
    +input(user, 'email', errors)(type="text")
    +input(user, 'password', errors)(type="password")
    input(name="_method" type="hidden" value="patch")
    +submit(user)(value=t('views.user.edit.submit'))
